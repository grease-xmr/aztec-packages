#!/usr/bin/env bash
NO_CD=1 source ${root:-$(git rev-parse --show-toplevel)}/ci3/source
source $ci3/source_redis
source $ci3/source_cache

# Ensure a command is passed
if [ "$#" != 1 ]; then
  echo "Usage: $0 <command>"
  exit 1
fi

cmd=$1

if [[ "${DENOISE:-0}" -eq 0 ]] || [[ "${BUILD_SYSTEM_DEBUG:-0}" -eq 1 ]]; then
  set -e
  exec bash -c "$cmd"
  exit 0
fi

function cleanup {
  set +e
  if [ -n "${publish_pid:-}" ]; then
    kill $publish_pid &>/dev/null
    wait $publish_pid
    publish_pid=
  fi
  if [ -n "${job_pid:-}" ]; then
    kill $job_pid &>/dev/null
    wait $job_pid
    job_pid=
  fi
  if [ -n "${tail_pid:-}" ]; then
    kill $tail_pid &>/dev/null
    wait $tail_pid
    tail_pid=
  fi
}
trap cleanup SIGINT SIGTERM
# Remove file on exit, so we can publish even after SIGINT or SIGTERM.
trap 'cleanup; rm -f $outfile' EXIT

dots_per_line=${DENOISE_WIDTH:-64}
dot_count=0
status="in-progress"
time="in-progress"

# We don't want to lose color just because we're wrapping.
export FORCE_COLOR=${FORCE_COLOR:-1}

# If stdout is connected to a terminal, print singular dots for each line.
[ -t 1 ] && realtime=1 || realtime=0

key=$(uuid)
url=http://ci.aztec-labs.com/$key
outfile=/tmp/$key
touch $outfile

function publish_log {
  if [ "$CI_REDIS_AVAILABLE" -eq 0 ]; then
    return
  fi

  {
    echo "Parent Log: ${PARENT_LOG_URL:-none}"
    echo "Command: $cmd"
    echo "Date: $(date)"
    echo "Status: $status"
    echo "Took: ${time}"
    echo

    cat $outfile
  } | redis_setexz $key $CI_REDIS_EXPIRE
}

function _format_log_output {
  echo "Parent Log: ${PARENT_LOG_URL:-none}"
  echo "Command: $cmd"
  echo "Date: $(date)"
  echo "Status: $status"
  echo "Took: ${time}"
  echo
  cat $outfile
}

function publish_log {
  [ "$CI_REDIS_AVAILABLE" -eq 0 ] && return
  _format_log_output | redis_setexz $key $CI_REDIS_EXPIRE
}

function publish_log_final {
  [ "$CI_REDIS_AVAILABLE" -eq 0 ] && return
  _format_log_output | cache_persistent $key $CI_REDIS_EXPIRE
}

function live_publish_log {
  while [ -f $outfile ]; do
    if [ $(( $(date +%s) - $(stat -c %Y "$outfile") )) -le 5 ]; then
      publish_log
    fi
    sleep 5
  done
}

if [ "$CI_REDIS_AVAILABLE" -eq 1 ]; then
  live_publish_log &
  publish_pid=$!
  log_info="(${yellow}${url}${reset})"
fi

# Dot logging.
set +e
echo -e "Executing: $cmd ${log_info:-}"
echo -n "   0 "

tail --sleep-interval=0.2 -n +1 -f "$outfile" > >(
  # Initialize variables inside the subshell
  last_print_time=$SECONDS

  while IFS= read -r line; do
    dot_count=$((dot_count+1))

    if [ $realtime -eq 1 ]; then
      # REALTIME MODE: Print dots immediately as output arrives
      printf "."
      if [[ "$dots_per_line" -gt 0 && $((dot_count % dots_per_line)) -eq 0 ]]; then
        printf "\n%4s " "$dot_count"
      fi
    else
      # NON-REALTIME MODE: Print full lines of dots, or partial lines every 10s
      should_print=0
      partial=0

      # Case 1: Full line reached
      if [[ "$dots_per_line" -gt 0 && $((dot_count % dots_per_line)) -eq 0 ]]; then
        should_print=1
        partial=$dots_per_line
      # Case 2: 10 seconds elapsed since last print
      elif [ $((SECONDS - last_print_time)) -ge 10 ]; then
        partial=$((dot_count % dots_per_line))
        if [ $partial -gt 0 ]; then
          should_print=1
        fi
      fi

      # Print if needed
      if [ $should_print -eq 1 ]; then
        printf '%.s.' $(seq 1 "$partial")
        printf "\n%4s " "$dot_count"
        last_print_time=$SECONDS
      fi
    fi
  done
) &
tail_pid=$!

# Execute the command in background.
PARENT_LOG_URL=$url bash -c "$cmd" <&0 > $outfile 2>&1 &
job_pid=$!

# Wait for the job to finish and get its exit status.
wait $job_pid
status=$?

time="${SECONDS}s"
[ -n "${publish_pid:-}" ] && kill $publish_pid &>/dev/null || true
publish_log_final

# Handle non-zero exit status
if [ "$status" -ne 0 ]; then
  if [ -t 1 ]; then
    echo -e "\nCommand exited with status $status. Dumping output:"
    cat $outfile
  fi
  echo -e ". ${red}failed${reset} ($time) ${log_info:-}"
else
  echo -e ". ${green}done${reset} ($time)"
fi

exit $status
